<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:textAlignment="center"
        android:id="@+id/intoTextViewTitleID"
        android:textColor="@color/appColorPrimary3"
       android:textStyle="bold"
       android:textSize="30sp"
       android:fontFamily="@font/kalpurush_bangla"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="জয় বাংলা"
        android:layout_marginBottom="10dp"
       />

    <TextView
        android:id="@+id/introTextViewDetailsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kalpurush_bangla"
        android:text="মোনায়েম সরকার-এর কবিতা"
        android:textAlignment="center"
        android:textColor="@color/appColorPrimary2"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>